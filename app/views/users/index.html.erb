<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th class="table-dark bg-primary">Name</th>
      <th class="table-dark bg-primary">Email Address</th>
      <th class="table-dark bg-primary" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name + ' ' + user.last_name, user%></td>
        <td><%= user.email_address %></td>
        <% if logged_in? %>
          <% if current_user == user %>
            <td><%= link_to 'Edit Profile', edit_user_path(user) %></td>
            <td><%= link_to 'Delete Account', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <td></td>
          <% end %>
        <% else %>
          <td></td>
          <td></td>
        <% end %>    
    <% end %>
  </tbody>
</table>

<br>

